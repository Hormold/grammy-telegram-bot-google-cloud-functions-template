{
  "compilerOptions": {
    "target": "ES2019",
    "module": "es2015",
    "moduleResolution": "node",
    "rootDir": "./src",
    "resolveJsonModule": true,
    "outDir": "dist",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}